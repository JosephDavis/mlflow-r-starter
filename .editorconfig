root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{R,r}]
indent_style = space
indent_size = 2

[*.{md,Rmd}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{sh,bat}]
indent_style = space
indent_size = 2